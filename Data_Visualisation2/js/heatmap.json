{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Kangaroo Population by Zone Over the Years",
    "anchor": "middle"
  },
  "params": [
    {
      "name": "species",
      "value": "Red Kangaroo",
      "bind": {
        "input": "select",
        "options": ["Red Kangaroo", "Western Grey Kangaroo", "Eastern Grey Kangaroo"],
        "name": "Select Kangaroo Species: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/dcha0082/3179/refs/heads/main/Data_Visualisation2/data/Kangaroo-Population.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum['Kangaroo Type'] == species"
    },
    {
      "calculate": "datum['Population (p)'] === '-' ? 0 : parseFloat(datum['Population (p)'])",
      "as": "PopulationValue"
    },
    {
      "calculate": "datum['PopulationValue'] === 0 ? 'No Data' : datum['PopulationValue']",
      "as": "PopulationDisplay"
    }
  ],
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"title": "Year", "labelAngle": 0}
    },
    "y": {
      "field": "Zone",
      "type": "nominal",
      "axis": {"title": "Zone"}
    },
    "color": {
      "field": "PopulationValue",
      "type": "quantitative",
      "scale": {
        "domain": {
          "signal": "species === 'Red Kangaroo' ? [0, 1300000] : species === 'Western Grey Kangaroo' ? [0, 260000] : [0, 1800000]"
        },
        "range": [
          "#FFFFFF", {"signal": "species === 'Red Kangaroo' ? '#C72C3B' : species === 'Western Grey Kangaroo' ? '#A5A66D' : '#4C8CBB'"}
        ]
      },
      "legend": {
        "title": "Population Size"
      }
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Zone", "type": "nominal", "title": "Zone"},
      {
        "field": "PopulationDisplay", 
        "type": "ordinal", 
        "title": "Population"
      },
      {"field": "Kangaroo Type", "type": "nominal", "title": "Kangaroo Type"}
    ]
  }
}
